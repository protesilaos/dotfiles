_hc ()
{
    herbstclient "$@"
}

frame_gap_current=$(_hc get frame_gap)
frame_gap_increment=${1-0}
frame_gap_new=$(($frame_gap_current + $frame_gap_increment))

# Make it cyclic.
if [ $frame_gap_new -lt 0 ]
then
    frame_gap_new=30
elif [ $frame_gap_new -gt 30 ]
then
    frame_gap_new=0
fi

_hc set frame_gap $frame_gap_new
